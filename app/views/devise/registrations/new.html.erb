
<h2>新規登録</h2>

<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<%= form_with model: @user, url: user_registration_path, method: :post, class: 'session-main', local: true do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "nickname_field" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mail_field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password_field" %>
  </div>

  <div class="field">
    <%= f.label :パスワード再確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "sign_in_submit" %>
  </div>
<% end %>



<div class="back">
  <%= link_to "＜戻る", root_path, class: "back"%>
</div>
