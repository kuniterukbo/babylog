<%= render "shared/header" %>

<%= form_with model: [@room,@post], local: true do |f|%>

  <div>
      <p>写真をアップロード</p>
      <%= f.file_field :image, id:"item-image" %>
  </div>

  <div class="input-birth-wrap">
    <%= f.label :撮影日 %>
     <%= raw sprintf(
                  f.date_select(
                    :shooting_date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2000,
                    end_year: (Time.now.year),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
  </div>

   <div>
    <%= f.label :イベント %>
    <%= f.collection_select(:event_id, Event.all, :id, :name, {})%>
  </div>
  
  <%= f.submit "完了" %>
<% end %>
