<%= render "shared/header" %>

<h2>アカウントの編集</h2>

<%= form_with model: current_user, class: 'edit-main', local: true do |f|%>
  <%# <%= render "devise/shared/error_messages", resource: resource%>

  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "nickname_field"%>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "mail_field" %>
  </div>


  <div class="field">
    <%= f.label :変更後のパスワード %> <i></i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password_field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> </em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :変更後のパスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_field" %>
  </div>

  <div class="field">
    <%= f.label :変更前のパスワード %> <i></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "password_field" %>
  </div>

  <div class="actions">
    <%= f.submit "変更", class: "update_submit" %>
  </div>
<% end %>




<div class="back">
  <%= link_to "＜戻る", root_path, class: "back"%>
</div>
